<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".itemActivity">


    <LinearLayout
        android:id="@+id/textLinear"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/imageInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textSize="40dp"
            android:layout_marginTop="22dp"
            android:textColor="#5C88B5" />
    </LinearLayout>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_below="@+id/textLinear"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_columnWeight="1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <ImageView
            android:id="@+id/thirdIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/used_3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/secIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/used_2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/firstIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/used_1"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/favIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/favorite_icon"
        android:layout_below="@+id/cardView"
        android:layout_alignParentRight="true"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Description"
        android:textSize="35dp"
        android:textColor="#2F679F"
        android:textStyle="bold"
        android:layout_below="@+id/favIcon" />


</RelativeLayout>